{% extends 'base.html.twig' %}

{% block title %}Liste des Categories{% endblock %}

{% block body %}
    <h1>Liste des Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Name }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('category_show', {'id': category.id}) }}">détails</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('category_edit', {'id': category.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y a aucune catégorie enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mt-3" href="{{ path('category_new') }}">Ajouter une catégorie</a>
{% endblock %}
