{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('product_index') }}">Retourner à la liste</a>

    <a class="btn btn-primary mt-1" href="{{ path('product_edit', {'id': product.id}) }}">détails</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
