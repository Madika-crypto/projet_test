{% extends 'base.html.twig' %}

{% block title %}liste des produits
{% endblock %}

{% block body %}
	<h1>liste des produits</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				{# <th>Description</th> #}
				<th>Price</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					{# <td>{{ product.description }}</td> #}
					<td>{{ product.price }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('product_show', {'product': product.id}) }}">détails</a>
						|
						<a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Il n'y a aucun produit enregistrée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary mt-3" href="{{ path('product_new') }}">Ajouter un produit</a>
{% endblock %}
